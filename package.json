{
	"name": "auto-tabs",
	"displayName": "Auto Tabs",
	"description": "Extension to convert spaces to tabs",
  "version": "0.2.0",
	"publisher": "r-devel",
	"repository": {
		"type": "git",
		"url": "https://github.com/r-devel/auto-tabs"
	},
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Formatters"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-tabs.format",
        "title": "Format with auto-tabs"
      },
      {
        "command": "auto-tabs.formatLine",
        "title": "Format current line with auto-tabs"
      },
      {
        "command": "auto-tabs.smartTab",
        "title": "Smart Tab: Indent and format line"
      }
    ],
    "languages": [
      {
        "id": "c",
        "extensions": [".c"]
      },
      {
        "id": "r",
        "extensions": [".R", ".r"]
      }
    ],
    "configuration": {
      "title": "Auto Tabs",
      "properties": {
        "autoTabs.convertAllSpaces": {
          "type": "boolean",
          "default": false,
          "description": "Convert all spaces to tabs (true) or only leading spaces (false)"
        }
      }
    },
    "keybindings": [
      {
        "command": "auto-tabs.smartTab",
        "key": "tab",
        "when": "editorTextFocus && !editorReadonly && !suggestWidgetVisible && !inSnippetMode && !hasOtherSuggestions && editorLangId == c"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.1",
    "@types/glob": "^8.1.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.41.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4"
  }
}
